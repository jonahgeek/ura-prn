{
    "compilerOptions": {
      "module": "Node16",
      "target": "ES2020",
      "moduleResolution": "node16",
      "strict": true,
      "typeRoots": ["typings", "node_modules/@types"],
      "outDir": "build",
      "declaration": true,
      "sourceMap": false,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "importHelpers": true,
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "**/*.test.ts"]
  }
  